
<div class="contaier">
<div class="box z-depth-2">
      <div class="row">
      
        <div class="col s12 m4">
          <div class="card blue-grey darken-1 white-text center">
            <div class="card-content-values ">
              <span class="card-title-text">Total RSVPs</span>
              <h4 class="card-value"><%= @all_rsvps %></h4>
            </div>
            <div class="card-action-values blue-grey darken-3">
              <p>All RSVPs received</p>
            </div>
          </div>
        </div>

        <div class="col s12 m4">
          <div class="card green white-text center">
            <div class="card-content-values ">
              <span class="card-title-text">Attending</span>
              <h4 class="card-value"><%= @attending %></h4>
            </div>
            <div class="card-action-values green darken-3">
              <p>People Attending</p>
            </div>
          </div>
        </div>

        <div class="col s12 m4">
          <div class="card red lighten-1 white-text center">
            <div class="card-content-values ">
              <span class="card-title-text">Declined</span>
              <h4 class="card-value"><%= @declined %></h4>
            </div>
            <div class="card-action-values red darken-3">
              <p>People that Declined</p>
            </div>
          </div>
        </div>
   </div>
   </div>

<div class="row">
<div class="col s12 m8 l8">
 <div class="box z-depth-2">


<% if @rsvps.count == 0 %>
<h5>You don't have RSVPs yet</h5>
<% else %>
<table class="bordered tb">
<thead>
<tr>
<th></th>
<th></th>
</tr>
</thead>
<tbody>
<% @rsvps.each do |rsvp| %>
<tr>
<td width="75%"><p><span class="rsvp_name"><%= rsvp.name %></span></p>
<p><span class="rsvp_note"><%= rsvp.message %></span></p>
</td>
<td><p class="rsvp_date"><%= rsvp.created_at.strftime("%d %b") %></p>
<p><span class="rsvp_status label"><%= t rsvp.status.class %></span></p></td>
<td></td>
<td><%= link_to [rsvp.event, rsvp], method: :delete, remote: true, data: { confirm: 'Delete this RSVP?'} do %>
								<i class="material-icons icon-purple">delete</i>
								<% end %></td>
</tr>
<% end %></tbody>
</table>
</div>
<% end %>
</div>
</div>
</div>
<!DOCTYPE html>
<html>
<head>
  <title>Invitted</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<%= stylesheet_link_tag "application", media: "all","data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>

  <nav>
  <div class="container">
    <div class="nav-wrapper">
      <% if user_signed_in? %>
      <%= link_to "Invitted", events_path %>
      <% else %>
      <%= link_to "Invitted", root_path %>
      <% end %>
      <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <% if user_signed_in? %>
        <li><%= link_to 'Sign out', destroy_user_session_path, method: 'delete' %></li>
        <% else %>
        <li><%= link_to 'Login', new_user_session_path, class: 'waves-effect waves-light btn purple darken-3' %></li>
        <li><%= link_to 'Sign Up', new_user_registration_path, class: 'waves-effect waves-light btn purple darken-3' %></li>
        <% end %>
      </ul>
      <ul class="side-nav" id="mobile-demo">
        <li><i class="material-icons">store</i><%= link_to "Home", root_path, class: 'waves-effect waves-purple' %></li>
        <% if user_signed_in? %>
        <li><%= link_to 'Sign out', destroy_user_session_path, method: 'delete' %></li>
        <% else %>
        <li><%= link_to 'Login', new_user_session_path %></li>
        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
  </nav>
	</header>
  <div>
    <% if notice %>
  <script type="text/javascript">
    Materialize.toast('<%= notice %>', 4000)
  </script>
<% end %>
<% if alert %>
  <script type="text/javascript">
    Materialize.toast('<%= alert %>', 4000)
  </script>
<% end %>
    <script type="text/javascript">
    $(".button-collapse").sideNav();
    $('input#input_text, textarea#textarea3').characterCounter();
    $('span:contains("Attending")').closest(".rsvp_status").addClass("t");
    $('span:contains("Declined")').closest(".rsvp_status").addClass("r");
    $('.datepicker').pickadate({ 
    min: new Date(),
    onSet: function (ele) {
   if(ele.select){
          this.close();
      }
    }
  });
    $('#clock').timepicker();
  </script>
  </div>
	<div class="container">
<%= yield %>
	</div>
</body>

</html>